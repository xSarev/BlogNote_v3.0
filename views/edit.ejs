<%- include("partials/header") %>
<div class="ui main text container segment">
	<div class="ui huge header">
		Edit <%= blog.title %>
	</div>
	<form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
		<div class="field">
			<labe>Title</labe>
			<input required type="text" name="blog[title]" value="<%= blog.title %>">
		</div>
		<div class="field">
			<labe>Image</labe>
			<input required type="text" name="blog[image]" value="<%= blog.image %>">
		</div>
		<div class="field">
			<labe>Content</labe>
			<textarea required name="blog[body]" ><%= blog.body %></textarea>
		</div>
		<div class="submitCenter">
			<input class="ui inverted green button" type="Submit">
		</div>
	</form>
</div>
<%- include("partials/footer") %>